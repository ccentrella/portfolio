<%= form_with(model: resource, scope: resource_name, url: password_path(resource_name), class: 'contact-form') do |f|%>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container form-container">
        <h1>Forgot Password</h1>
  </div>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'field' %><br/>

  <div class="actions">
    <%= f.submit "Send Reset Instructions", class: 'button-fixed submit-button'%>
  </div>
  <div class="field">
    <%= render "devise/shared/links" %>
  </div>
<% end %>