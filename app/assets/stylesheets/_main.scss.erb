/* CSS Document */

/** Variables and mixins **/

$light-text: #fcfcfc;
$dark-text: #353535;
$primary: #9A0002;
$secondary: #3D5D21;
$navbar: #425218;
$navbar-item: #4E5D27;
$navbar-hover: #35430F;
$navbar-active: #2A3808;
$navbar-border: #7C9341;
$timeline: #496600;
$timeline-text: #627E2D;
$background-footer-top: #2E4000;
$background-footer-border: #B5C081;
$background-footer-bottom: #3F0708;
$overlay: #3D5D2123;
$banner-border: #7C9341;
$logo-text: $light-text;
$logo-text-hover: #ecf7ed;
$button-border: #4C8E13;
$button-hover: #3B4D0A;
$flash-success: #657C3B;
$flash-warning: #D97109;
$flash-error: #D92E2E;

/** Text **/

body {
    margin: 0;
}

body,
p {
    font-family: 'Quasimoda', sans-serif;
    font-size: 2.75vh;
    font-weight: 300;
    color: $dark-text;

    &.large {
        font-size: 1.1em;
    }

    &.small {
        font-size: 0.8em;
    }
}

a {
    text-decoration: none;
    color: dodgerblue;

    &:hover {
        color: deepskyblue;
    }
}

h1,
h2,
h3,
h4 {
    font-family: rooney-sans, sans-serif;
    font-weight: 700;
    color: $primary;
}

h1 {
    font-size: 2.75em;
}

h2 {
    font-size: 2.25em;
}

/** Layout **/

.hidden {
    display: none;
}

main {
    margin: 0;
    padding: 0 30px 0 20px;
}

hr {
    margin: 30px 0;
    border: 1px dashed $light-text;
}

.flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.flex-break
{
    flex-basis: 100%;
    height: 0
}

.dot,
.dot-small,
.dot-beginning,
.dot-end {
    margin-left: 0.05em;
    margin-right: -0.25em;
    margin-block: -0.35em;
    display: inline-block;
    height: 1.15em;
    width: 1.15em;
    background-color: $timeline;
    border-radius: 50%;
}

.dot-beginning {
    margin-left: -0.85em;
    margin-bottom: 2em;
    display: block;
    height: 1.5em;
    width: 1.5em;
}

.dot-end {
    margin-left: -0.85em;
    margin-top: 1.5em;
    display: block;
    height: 1.5em;
    width: 1.5em;
}

.dot-small {
    margin-left: 0.2em;
    margin-right: 0;
    margin-block: -0.2em;
    height: 0.85em;
    width: 0.85em;
}

.timeline {
    margin-top: 3em;
    margin-left: 3em;
    border-left: 0.25em solid $timeline;
}

.timeline-item {
    >h2 {
        margin-left: 2em;
        text-indent: -5.5em;
        padding-right: 0.5em;
        color: $timeline-text;
        font-family: 'Quasimoda', sans-serif;
        font-size: 2.75vh;
        font-weight: 300;

        .timeline-year {
            padding-right: 0.4em;
            font-family: droid-sans-mono, monospace;
            font-weight: 400;
        }

        .timeline-heading {

            &:before {
                content: '⸻';
                font-size: 2vh;
            }
        }

    }

    >p {
        margin: 0.5em 0 0.5em 4em;
        text-indent: -1.4em;
        color: $timeline-text;
        font-family: 'Quasimoda', sans-serif;
        font-size: 2.25vh;
        font-weight: 300;

        &:before {
            content: '⸺';
            text-indent: 15px;
            font-size: 1.75vh;
        }
    }
}

.flash-container {
    margin: 0;
}

.flash, .flash-success, .flash-warning {
    margin: 0 0.5em;
    padding: 0.5em 1em;
    text-align: center;
    background-color: $flash-success;
    border-radius: 4em;

    p {
        color: $light-text;
    }

}

.flash-warning {
    background-color: $flash-warning;
}

.flash-error {
    background-color: $flash-error;
}


@media screen and (min-width:750px)
{
    main, .flash-container {
        padding: 0 15%;
        margin: auto;
        max-width: 850px;
    }
}

/** Header **/
header {
    margin: 0 0 3em 0;
}

.navbar-outer {
    flex-wrap: wrap;
}

@keyframes menu_toggle {
    from {opacity: 1}
    to {opacity: 0.7;}
}
.menu-toggle {
    margin: 0 1em 0.4em 0.5em;
    height: 1.5em;
    cursor:pointer;

    &:hover {
        opacity: 0.7;
        animation-name: menu_toggle;
        animation-duration: 1s;
    }
}

.navbar {
    background-color: $navbar;
    border-top: 1px solid $navbar-border;
    text-align: center;
    display: none;
    flex-basis: 100%;

    ul {
        margin: 0;
        padding: 0;
        float: none;
        list-style-type: none;
    }

    /* Create a separator aligned perfectly, by using an outer item for height,
    but an inner item for width */
    .nav-item {
        padding: 0.6em 0;

        &:nth-child(odd) {
            background-color: $navbar-item;
        }

        a {
            font-size: 1.1em;
            display: block;
            color: $light-text;
            padding: 0 0.6em;
        }

        &:hover {
            background-color: $navbar-hover;
        }

        &.active {
            background-color: $navbar-active;
        }
    }
}

#toggle {
    display: none;

    &:checked ~ .navbar {
        display: block;
    }
}

.banner-image {
    border-bottom: 4px solid $banner-border;
    background-repeat: no-repeat;
    background-image: url(<%= asset_path 'banner.png' %>);
}

.banner-overlay {
    background-color: $overlay;
}

@media screen and (min-width:750px)
{
    header {
        margin-bottom: 3em;
    }

    .banner-image {
        background-size: cover;
    }

    .menu-toggle {
        display: none;
    }
    .navbar {
        display: block;
        padding-top: 4px;

        .nav-item, .nav-item:nth-child(odd) {
            float: left;
            width: 8em;
            background-color: $navbar;

            a {
                border-right: 1px solid $light-text;
            }

            &:hover {
                background-color: $navbar;
                border-top: 4px solid #c0c0c0;
                margin-top: -4px;
            }
             &.active {
                background-color: $navbar;
                border-top: 4px solid $light-text;
                margin-top: -4px;
            }
        }
    }
}

/** Footer **/
footer {
    padding-top: 110px;
}

.footer-top {
    height: auto;
    padding-bottom: 10%;
    border-top: 3px solid $background-footer-border;
    background-color: $background-footer-top;
}

.footer-bottom {
    padding: 30px 15px 15px 15px;
    overflow: auto;
    background-color: $background-footer-bottom;
    border-bottom: 5px solid #732718;

    .buttons {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 15px;
    }
}

.copyright {
    font-family: 'Quasimoda', sans-serif;
    font-weight: 300;
    font-size: 12pt;
    color: $light-text;
}

.socials {
    margin-top: 1em;
    text-align:center;
}

@media screen and (min-width:750px) {

    .footer-top {
        padding-bottom: 0;

        .logo-small {
            padding: 50px 0 70px 20px;
            font-size: 3em;
        }
    }

    .footer-bottom .buttons {
        gap: 15px 150px;
    }
    
    hr {
        margin-bottom: 20px;
    }

    .copyright {
        font-size: 14pt;
        display: inline;
    }

    .socials {
        float: right;
        margin: auto;
    }
}

/** Logo **/
.logo,
.logo-large,
.logo-small {
    margin: 0;
    padding: 0.75em 0.25em 0.15em 0.25em;
    font-family: jaf-domus-titling-web, sans-serif;
    font-weight: 600;
    line-height: 1.15;
    font-size: 17vw;
    color: $logo-text;

    a {
        color: $logo-text
    }

    a:hover {
        color: $logo-text-hover
    }
}

.logo-large {
    padding: 15px 15px 0 15px;
}

.logo-small {
    padding: 30px 25px 0 25px;
    font-size: 12vw;

    a:hover {
        color: f0f0f0;
    }
}

.logo-tagline,
.logo-tagline-header {
    margin: 0;
    padding: 0 15px 0 15px;
    font-family: jaf-domus-titling-web, sans-serif;
    font-weight: 500;
    font-size: 8vw;
    color: white;
}

.logo-tagline-header {
    margin-bottom: 0.8em;
}

@media screen and (min-width: 550px)
{
    .logo,
    .logo-large,
    .logo-small
    {
        font-size: 12vw;
    }

    .logo-tagline,
    .logo-tagline-header {
    font-size: 6vw;
    }
}

@media screen and (min-width: 750px)
{
    .logo,
    .logo-large,
    .logo-small
    {
        font-size: 6vw;
    }

    .logo-tagline,
    .logo-tagline-header {
    font-size: 4vw;
    }
}

/** Buttons **/
@keyframes button_hover {
    from {
        background-color: transparent;
        color: black;
    }

    to {
        background-color: $button-hover;
        color: $light-text;
    }
}

@keyframes button_hover_width {
    from {
        padding-left: 0.5em;
    }

    to {
        padding-left: 1em;
    }
}

div.button-div {
    padding: 50px 0 15px 0;
    text-align: center;
}
div.button-div-fixed {
    padding: 15px 0 0 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

a.button,
a.footer-button,
a.button-fixed {
    padding: 15px 22px 14px 21px;
    border: 2px solid $button-border;
    border-radius: 30px;
    background-color: transparent;
    font-family: 'rooney-sans', sans-serif;
    font-weight: 500;
    font-size: 0.8em;
    text-decoration: none;
    color: black;
    text-transform: uppercase;
    text-align: center;

    .icon {
        padding-left: 0.5em;
    }

    &:hover {
        color: $light-text;
        background-color: $button-hover;
        animation-name: button_hover;
        animation-duration: 1s;

        .icon {
            padding-left: 1em;
            animation-name: button_hover_width;
            animation-duration: 1s;
        }
    }
}

a.footer-button {
    color: $light-text;
    border-color: $light-text;
    flex-basis: 30%;
    max-width: 120px;

    &:hover {
        background-color: $light-text;
        color: $background-footer-bottom;
        animation-name: none;
    }
}

a.button-fixed {
    display: inline-block;
    margin-bottom: 1em;
    width: 20em;
    max-width: 80%;
}

a.footer-social {
    padding: 15px 7px;
    color: $light-text;

    &:hover {
        filter: invert(93%) sepia(93%)
           }

    img {
        width: 40px;
    }
}
