/* CSS Document */

@import url("https://use.typekit.net/dby5tzk.css");

/** Variables and mixins **/

$light-text: #fcfcfc;
$primary: #9A0002;
$secondary: #3D5D21;
$navbar: #657C3B;
$background-footer-top: #2E4000;
$background-footer-border: #6A80007f;
$background-footer-bottom: #3F0708;
$overlay: #3D5D2123;
$banner-border: #3c4006c7;
$button-border: #4C8E13;
$button-hover: #3B4D0A;

/** Text **/

body,
p {
    font-family: 'Quasimoda', sans-serif;
    font-size: 2.5vh;
    font-weight: 300;

    &.large {
        font-size: 1.2em;
    }

    &.small {
        font-size: 0.8em;
    }
}

h1,
h2,
h3,
h4 {
    font-family: rooney-sans, sans-serif;
    font-weight: 700;
    color: $primary;
}

h1 {
    font-size: 3em;
}

/** Layout **/

main {
    padding: 0 30px 0 20px;
}

hr {
    margin: 30px 0;
    border: 1px dashed $light-text;
}

.flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/** Header **/
header {
    margin: -27px -8px 0109px -8px;
}

.menu-toggle {
    height: 28px;
    padding: 25px;
}

.navbar {
    margin-top: -32px;
    height: 50px;
    background-color: $navbar;

    ul {
        float: none;
        list-style-type: none;
    }
}

.banner-image {
    min-height: 250px;
    border-bottom: 3px solid $banner-border;
    background-repeat: no-repeat;
    background-size: cover;
    background-image: url(<%= asset_path 'banner.png' %>);
}

.banner-overlay {
    padding-bottom: 25px;
    background-color: $overlay;
}

/** Footer **/
footer {
    padding-top: 110px;
    margin: -8px;
}

.footer-top {
    height: auto;
    padding-bottom: 10%;
    border-top: 3px solid $background-footer-border;
    background-color: $background-footer-top;
}

.footer-bottom {
    padding: 30px 0 0 0;
    background-color: $background-footer-bottom;

    .buttons {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 15px;
    }
}

.copyright {
    padding: 0 20px 20px 20px;
    margin: 0;
    font-family: 'Quasimoda', sans-serif;
    font-weight: 300;
    font-size: 12pt;
    color: $light-text;
}

/** Logo **/
.logo,
.logo-large,
.logo-small {
    margin: 0;
    padding: 60px 15px 0 15px;
    font-family: jaf-domus-titling-web, sans-serif;
    font-weight: 600;
    line-height: 1.15;
    font-size: 17vw;
    color: $light-text;
}

.logo-large {
    padding: 15px 15px 0 15px;
}

.logo-small {
    padding: 30px 25px 0 25px;
    font-size: 12vw;
}

.logo-tagline {
    margin: 12px 0 0 0;
    padding: 0 15px 0 15px;
    font-family: jaf-domus-titling-web, sans-serif;
    font-weight: 500;
    font-size: 8vw;
    color: white;
}

/** Buttons **/
div.button-div {
    padding: 30px 0 15px 0;
    text-align: center;
}

a.button,
a.footer-button {
    padding: 15px 22px 14px 21px;
    border: 2px solid $button-border;
    border-radius: 30px;
    background-color: transparent;
    font-family: 'rooney-sans', sans-serif;
    font-weight: 500;
    font-size: 0.8em;
    text-decoration: none;
    color: black;
    text-transform: uppercase;
    text-align: center;

    &:hover {
        color: $light-text;
        background-color: $button-hover;
    }
}

a.footer-button {
    color: $light-text;
    border-color: $light-text;
    flex-basis: 30%;
    max-width: 120px;

    &:hover {
        background-color: $light-text;
        color: $background-footer-bottom;
    }
}

