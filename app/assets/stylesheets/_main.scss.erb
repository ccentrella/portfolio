/* CSS Document */

@import url("https://use.typekit.net/dby5tzk.css");

/** Variables and mixins **/

$light-text: #fcfcfc;
$primary: #9A0002;
$secondary: #3D5D21;
$navbar: #657C3B;
$timeline: #496600;
$timeline-text: #627E2D;
$background-footer-top: #2E4000;
$background-footer-border: #6A80007f;
$background-footer-bottom: #3F0708;
$overlay: #3D5D2123;
$banner-border: #3c4006c7;
$logo-text: $light-text;
$logo-text-hover: #ecf7ed;
$button-border: #4C8E13;
$button-hover: #3B4D0A;

/** Text **/

body,
p {
    font-family: 'Quasimoda', sans-serif;
    font-size: 2.75vh;
    font-weight: 300;

    &.large {
        font-size: 1.1em;
    }

    &.small {
        font-size: 0.8em;
    }
}

a {
    text-decoration: none;
}

h1,
h2,
h3,
h4 {
    font-family: rooney-sans, sans-serif;
    font-weight: 700;
    color: $primary;
}

h1 {
    font-size: 2.75em;
}

/** Layout **/

main {
    padding: 0 30px 0 20px;
}

hr {
    margin: 30px 0;
    border: 1px dashed $light-text;
}

.flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.dot,
.dot-small,
.dot-beginning,
.dot-end {
    margin-left: 0.05em;
    margin-right: -0.25em;
    margin-block: -0.35em;
    display: inline-block;
    height: 1.15em;
    width: 1.15em;
    background-color: $timeline-text;
    border-radius: 50%;
}

.dot-beginning {
    margin-left: -0.85em;
    margin-bottom: 2em;
    display: block;
    height: 1.5em;
    width: 1.5em;
}

.dot-end {
    margin-left: -0.85em;
    margin-top: 1em;
    display: block;
    height: 1.5em;
    width: 1.5em;
}

.dot-small {
    margin-left: 0.2em;
    margin-right: 0;
    margin-block: -0.2em;
    height: 0.85em;
    width: 0.85em;
}

.timeline {
    margin-top: 3em;
    margin-left: 3em;
    border-left: 4px solid $timeline;
}

.timeline-item {
    >h2 {
        margin-left: 2em;
        text-indent: -5.5em;
        padding-right: 0.5em;
        color: $timeline-text;
        font-family: 'Quasimoda', sans-serif;
        font-size: 2.75vh;
        font-weight: 300;

        .timeline-year {
            padding-right: 0.4em;
            font-family: droid-sans-mono, monospace;
            font-weight: 400;
        }

        .timeline-heading {

            &:before {
                content: '⸻';
                font-size: 2vh;
            }
        }

    }

    >p {
        margin: 0.5em 0 0.5em 4em;
        text-indent: -1.4em;
        color: $timeline-text;
        font-family: 'Quasimoda', sans-serif;
        font-size: 2.25vh;
        font-weight: 300;

        &:before {
            content: '⸺';
            text-indent: 15px;
            font-size: 1.75vh;
        }
    }
}

/** Header **/
header {
    margin: -27px -8px 0109px -8px;
}

.menu-toggle {
    height: 28px;
    padding: 25px;
}

.navbar {
    margin-top: -32px;
    height: 50px;
    background-color: $navbar;

    ul {
        float: none;
        list-style-type: none;
    }
}

.banner-image {
    min-height: 250px;
    border-bottom: 3px solid $banner-border;
    background-repeat: no-repeat;
    background-size: cover;
    background-image: url(<%= asset_path 'banner.png' %>);
}

.banner-overlay {
    padding-bottom: 25px;
    background-color: $overlay;
}

/** Footer **/
footer {
    padding-top: 110px;
    margin: -8px;
}

.footer-top {
    height: auto;
    padding-bottom: 10%;
    border-top: 3px solid $background-footer-border;
    background-color: $background-footer-top;
}

.footer-bottom {
    padding: 30px 0 0 0;
    background-color: $background-footer-bottom;

    .buttons {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 15px;
    }
}

.copyright {
    padding: 0 20px 20px 20px;
    margin: 0;
    font-family: 'Quasimoda', sans-serif;
    font-weight: 300;
    font-size: 12pt;
    color: $light-text;
}

/** Logo **/
.logo,
.logo-large,
.logo-small {
    margin: 0;
    padding: 60px 15px 0 15px;
    font-family: jaf-domus-titling-web, sans-serif;
    font-weight: 600;
    line-height: 1.15;
    font-size: 17vw;
    color: $logo-text;

    a {
        color: $logo-text
    }

    a:hover {
        color: $logo-text-hover
    }
}

.logo-large {
    padding: 15px 15px 0 15px;
}

.logo-small {
    padding: 30px 25px 0 25px;
    font-size: 12vw;

    a:hover {
        color: f0f0f0;
    }
}

.logo-tagline {
    margin: 12px 0 0 0;
    padding: 0 15px 0 15px;
    font-family: jaf-domus-titling-web, sans-serif;
    font-weight: 500;
    font-size: 8vw;
    color: white;
}

/** Buttons **/
div.button-div {
    padding: 30px 0 15px 0;
    text-align: center;
}

a.button,
a.footer-button {
    padding: 15px 22px 14px 21px;
    border: 2px solid $button-border;
    border-radius: 30px;
    background-color: transparent;
    font-family: 'rooney-sans', sans-serif;
    font-weight: 500;
    font-size: 0.8em;
    text-decoration: none;
    color: black;
    text-transform: uppercase;
    text-align: center;

    &:hover {
        color: $light-text;
        background-color: $button-hover;
    }
}

a.footer-button {
    color: $light-text;
    border-color: $light-text;
    flex-basis: 30%;
    max-width: 120px;

    &:hover {
        background-color: $light-text;
        color: $background-footer-bottom;
    }
}