i {
    display: inline-block;
    width: 1em;
    vertical-align: -0.05em;
    margin: 0 0.5em;

    &.medium {
        width: 1.25em;
        vertical-align: -0.15em;
    }

    &.large {
        width: 2em;
        vertical-align: -0.5em;
    }
}

i.calendar::before {
    content: url(<%= asset_path 'icons/calendar.svg' %>);
}

i.person::before {
    content: url(<%= asset_path 'icons/person.svg' %>);
}

i.clock::before {
    content: url(<%= asset_path 'icons/clock.svg' %>);
}

i.left-arrow::before {
    content: url(<%= asset_path 'icons/left-arrow.svg' %>);
}

i.right-arrow::before {
    content: url(<%= asset_path 'icons/right-arrow.svg' %>);
}

i.pencil::before {
    content: url(<%= asset_path 'icons/pencil.svg' %>);
}

i.heart::before {
    content: url(<%= asset_path 'icons/heart.svg' %>);
}

.circle-icon {
    margin: 0 2em;
    border-radius: 50%;
    background-color: $light-text;
    display: inline-block;
    transition: opacity 1s;

    &:hover {
        opacity: 0.85;
    }

    img {
        height: 4em;
        margin: 2em;
    }

    a {
        display: inline-block;

        &:hover {
            opacity: 1;
        }
    }

    &.transparent {
        background-color: transparent;

        img {
            height: 8em;
            margin: 0em;
        }
    }

    @media screen and (max-width: 374px) {
        margin: 0 1em;

        img {
            margin: 1.5em;
        }
    }

    @media screen and (min-width: 750px) {
        img {
            height: 8em;
            margin: 3em; 
        }

        &.transparent img
        {
            height: 14em;
        }
    }
}