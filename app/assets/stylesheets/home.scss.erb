.hero-image {
    display: flex;
    align-items: center;
    height: calc(var(--vh, 1vh) * 100);
    border-bottom: 3px solid #3c4006c7;
    padding-bottom: 20px;
    background-color: #3D5D212e;
    background-repeat: no-repeat;
    background-size: cover;
    background-image: url(<%= asset_path 'background-home.png' %>);
}

.hero-overlay {
    margin-top: 150px;
    padding-bottom: 50px;
    width: 100%;
    background-color: #3D5D2123;
}