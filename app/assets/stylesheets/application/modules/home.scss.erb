.hero {
    align-items: center;

    .hero-overlay {
        margin: auto;      
    }

    .logo {
        font-size: 3.2em;
        text-align: left;
        padding: 0.25rem 1rem;
    }

    .logo-tagline {
        font-size: 2em;
        text-align: left;
        padding: 0.25rem 1.25rem;
    }
}

.hero-image {
    display: flex;
    order: 2;
    flex: 1 0 0;
    align-items: center;
    height: calc(var(--vh, 1vh) * 100 - 9px);
    background-color: #3D5D212e;
    background-repeat: no-repeat;
    background-size: cover;
    background-image: url(<%= asset_path 'background-home.jpg' %>);
    border-bottom: 10px solid #3c4006c7;
}

.hero-about {
    padding: 3em 2em 0 2.25em;
    order: 1;
    flex: 1 0 0;
}

.about-button {
    display: none;
}

.hero-title {
    font-size: 3em;
}

@media screen and (min-width: 500px) {
    .hero {
        .logo {
            font-size: 4em;
        }

        .logo-tagline {
            font-size: 2.5em;
        }
    }
}

@media screen and (min-width: 750px) {
    .hero {
        .logo {
            font-size: 5em;
        }

        .logo-tagline {
            font-size: 3.5em;
        }
    }
}

@media screen and (min-width: 1000px) and (min-height: 700px) {
    .hero {
        display: flex;
        background-color: black;
        border-bottom: 10px solid #3B4D0A;

        p, a, .hero-title {
            color: whitesmoke;
            margin-top: 0;
        }

        .hero-overlay {
            margin: revert;
        }

        .logo {
            font-size: 4em;
        }

        .logo-tagline {
            font-size: 2.5em;
        }
    }

    .hero-image {
        padding: 0 3em;
        border: none;
    }

    .hero-about {
        font-size: 1.15em;
    }

    .about-button {
        display: block;
    }
}