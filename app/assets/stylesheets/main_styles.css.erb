/* CSS Document */

@import url("https://use.typekit.net/dby5tzk.css");

/*Fonts*/
body {
	font-size: 2em;
	font-family: 'Quasimoda', sans-serif;
	font-weight: 300;
}

h1 h2 h3 h4 {
	font-family: rooney-sans, sans-serif;
	font-style: normal;
	font-weight: 700;
}

/*Flex*/
.flex {
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.menu-toggle {
	height: 28px;
	padding: 25px;
}

/*Navbar*/

header {
	margin: -27px -8px 0 -8px;
}

.banner-image{
	min-height: 250px;
	border-bottom: 3px solid #3c4006c7;
	background-color: #3D5D212e;
	background-repeat: no-repeat;
	background-size: cover;
	background-image: url(<%= asset_path 'banner.png' %>);
}

.banner-overlay
{
	background-color: #3D5D2123;
	padding-bottom:25px;
}

.logo {
	margin: 0;
	padding: 60px 15px 0 15px;
	font-family: jaf-domus-titling-web, sans-serif;
	font-weight: 600;
	font-style: normal;
	line-height: 1.15;
	font-size: 16vw;
	color: white;
}

.logo-tagline {
	margin: -0.2em 0 0 0;
	padding: 0 15px 0 15px;
	font-family: jaf-domus-titling-web, sans-serif;
	font-weight: 500;
	font-style: normal;
	font-size:8vw;
	color: white;
}

.navbar {
	margin-top: -32px;
	background-color: #657C3B;
	height: 50px;
}

.navbar ul { float: none;
			 list-style-type: none;}