/* CSS Document */

@import url("https://use.typekit.net/dby5tzk.css");

/*Fonts*/

body, p {
	font-size: 2.5vh;
	font-family: 'Quasimoda', sans-serif;
	font-weight: 300;
}

main {
	padding: 0 30px 0 20px;
}

p.large {
	font-size: 1.2em;
	}
p.small {
		font-size: 0.8em;
		}

h1, h2, h3, h4 {
	font-family: rooney-sans, sans-serif;
	font-style: normal;
	font-weight: 700;
	color: #9A0002;
}

h1 {
	font-size: 3em;
}

/*Flex*/
.flex {
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.flex-wrap {
	display: flex;
	align-items: center;
	justify-content: space-around;
	flex-wrap:wrap;
}

.menu-toggle {
	height: 28px;
	padding: 25px;
}

/*Navbar*/

header {
	margin: -27px -8px 0109px -8px;
}

.banner-image{
	min-height: 250px;
	border-bottom: 3px solid #3c4006c7;
	background-color: #3D5D212e;
	background-repeat: no-repeat;
	background-size: cover;
	background-image: url(<%= asset_path 'banner.png' %>);
}

.banner-overlay
{
	background-color: #3D5D2123;
	padding-bottom:25px;
}

.home-image{
	height: 100vw;
	height: calc(var(--vh, 1vh) * 100);
	border-bottom: 3px solid #3c4006c7;
	padding-bottom: 15px;
	background-color: #3D5D212e;
	background-repeat: no-repeat;
	background-size: cover;
	background-image: url(<%= asset_path 'background-home.png' %>);
	display: flex;
	align-items: center
}

.home-overlay
{
	background-color: #3D5D2123;
	padding-bottom:25px;
	width: 100%;
}

.logo {
	margin: 0;
	padding: 60px 15px 0 15px;
	font-family: jaf-domus-titling-web, sans-serif;
	font-weight: 600;
	font-style: normal;
	line-height: 1.15;
	font-size: 17vw;
	color: white;
}

.logo-small {
	margin: 0;
	padding: 30px 25px 0 25px;
	font-family: jaf-domus-titling-web, sans-serif;
	font-weight: 600;
	font-style: normal;
	line-height: 1.15;
	font-size: 14vw;
	color: white;
}

.logo-tagline {
	margin: 12px 0 0 0;
	padding: 0 15px 0 15px;
	font-family: jaf-domus-titling-web, sans-serif;
	font-weight: 500;
	font-style: normal;
	font-size:8vw;
	color: white;
}

.navbar {
	margin-top: -32px;
	background-color: #657C3B;
	height: 50px;

	ul { float: none;
		list-style-type: none;}
	}

/*Buttons*/
div.button-div {
	padding: 30px 0 15px 0;
	text-align: center;
}
a.button, a.footer-button {
	padding: 15px 22px 14px 21px;
	border: 2px solid #4C8E13;
	border-radius: 30px;
	background-color: transparent;
	font-family: 'rooney-sans', sans-serif;
	font-weight: 500;
	font-size: 0.9em;
	text-decoration: none;
	color: black;
	text-transform: uppercase;
	text-align: center;
}

a.button:hover {
	color: whitesmoke;
	background-color: #3B4D0A;
}

a.footer-button
{
	padding: 15px 25px 15px 25px;
	margin: 10px;
	color: whitesmoke;
	border-color: whitesmoke;
	flex-basis: 30%;
}

a.footer-button:hover
{
	background-color: whitesmoke;
	color: #3F0708;
}

/*Footer*/
footer {
	padding-top:110px;
	margin: -8px;
}
.footer-top{
	height: 180px;
	background-color: #2E4000;
	border-top: 3px solid #6A80007f;
}

.footer-bottom
{
	padding: 30px 0 20px 0;
	height: 250px;
	background-color: #3F0708;
	align-items: center;
}
.copyright {
	padding: 0 20px 20px 20px;
	font-family: 'Quasimoda', sans-serif;
	color: whitesmoke;
	font-weight: 300;
	font-size: 12pt;
}
hr
{
	margin: 30px 0;
	border: 1px dashed whitesmoke;
}