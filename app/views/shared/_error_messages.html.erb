<% if error_messages.errors.any? %>
  <div class="flash-container">
    <div class = "flash flash-warning">
        <p><strong>Form could not be saved. Please fix the following <%= pluralize(error_messages.errors.count, "problem") %>:</strong></p>
        <ul>
            <% error_messages.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
        </ul>
      </div>
    </div>
<% end %>