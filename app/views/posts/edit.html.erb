<% provide(:title, "Edit Post") %>
<div class="container">
    <h1>Edit Post</h1>
        <%= render 'error_messages' %>
</div>
<%= form_with(model: @post, local: true, class: 'contact-form') do |f| %>
    <%= f.text_field :title, placeholder: 'Title', class: 'field' %><br/>
    <%= f.text_field :description, placeholder: 'Description', class: 'field' %><br/>
    <%= f.text_field :featured_image, placeholder: 'Image', class: 'field' %><br/>
    <%= f.text_field :category, placeholder: 'Category', class: 'field' %><br/>
    <%= f.text_field :tags, placeholder: 'Tags', class: 'field' %><br/>
    <%= f.text_field :user_id, placeholder: 'User', class: 'field' %><br/>        
    <%= f.text_area :content, placeholder: 'Content', class: 'field field-message' %><br/>
    
    <%= f.text_field :nickname, hint: 'Leave this field blank!', class: 'hidden' %>

    <%= f.submit 'Update Post', class: 'field submit-button' %>
<% end %>
