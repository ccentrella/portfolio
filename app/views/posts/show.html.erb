<% provide(:title, @post.title) %>
<article class="post">
    <section class="post-header">
        <div class="post-header-top">
            <%= link_to "<i class='icon left-arrow medium'></i>".html_safe, blog_path, class: "posts-back-icon", title: "View All Articles" %>
            <% if user_signed_in? %>
                <%= link_to "<i class='icon pencil large'></i>".html_safe, edit_post_path(@post), class: "post-edit-icon", title: "Edit Post" %>
            <% end %>
            <h1><%= @post.title %></h1>
        </div>
        <div class="post-header-bottom">
            <div class="post-details">
                <p><i class="calendar large"></i> <%= @post.get_date %> </p>
                <p><i class="clock large"></i> <%= @post.get_time %> </p>
            </div>
        </div>
        <div class="flash-container">
            <div class="flash flash-notice">
                <p><strong>This feature has just been released!</strong></p>
                <p>Please be patient as additional functionality is added.</p>
            </div>
        </div> 
        <% if !flash.empty? %>
            <div class="flash-container">
                <% flash.each do |message_type, message| %>
                <div class="flash flash-<%= message_type %>"><p><%= message %></p></div>
                <% end %>
            </div>
        <% end %>                 
        <div class="container">
            <p class="post-author"><i class="person large"></i><%= @post.get_author %></p>
            <p class="post-description"><%= @post.description %></p>
        </div>
    </section>
    <section class="post-content container">
        <p><%= @post.content %></p>
    </section>
</article>
<%= render @subscriber %>