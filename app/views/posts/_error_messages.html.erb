<% if @post.errors.any? %>
  <div>
    <div class = "flash flash-error">
      <p>The form contains <%= pluralize(@post.errors.count, "error") %>.</p>
    </div>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
