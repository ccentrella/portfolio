<%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name), class: 'contact-form') do |f|%>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container form-container">
    <h1>Sign Up</h1>
  </div>
  <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Name', class: 'field' %><br/>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'field' %><br/>
  <%= f.password_field :password, autocomplete: "new-password", placeholder: 'New Password', class: 'field' %><br/>
  <% if @minimum_password_length %>
      <p><em>(<%= @minimum_password_length %> characters minimum)</em></p>
  <% end %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', class: 'field' %><br/>
  <% if @show_checkbox_recaptcha %>
      <%= recaptcha_tags %>
  <% else %>
      <%= recaptcha_v3(action: 'sign_up', site_key: ENV['RECAPTCHA_SITE_KEY_V3']) %>
  <% end %>      
  <div class="actions">
    <%= f.submit "Sign Up", class: 'button-fixed submit-button'%>
  </div>
  <div class="field">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
