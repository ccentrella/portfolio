<%= form_with(model: resource, scope: resource_name, url: session_path(resource_name), class: 'contact-form') do |f|%>
  <div class="container form-container">
        <h1>Sign In</h1>
  </div>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'field' %><br/>
  <%= f.password_field :password, autocomplete: "password", placeholder: 'Password', class: 'field' %><br/>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <% if @show_checkbox_recaptcha %>
      <%= recaptcha_tags %>
  <% else %>
      <%= recaptcha_v3(action: 'sign_in', site_key: ENV['RECAPTCHA_SITE_KEY_V3']) %>
  <% end %>    
  <div class="actions">
    <%= f.submit "Sign In", class: 'button-fixed submit-button'%>
  </div>
  <div class="field">
    <%= render "devise/shared/links" %>
  </div>
<% end %>


