<%= form_with(model: resource, scope: resource_name, url: password_path(resource_name), method: "put", class: 'contact-form') do |f|%>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container form-container">
        <h1>Change Password</h1>
  </div>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'New Password', class: 'field' %><br/>
  <% if @minimum_password_length %>
      <p><em>(<%= @minimum_password_length %> characters minimum)</em></p>
  <% end %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', class: 'field' %><br/>

  <div class="actions">
    <%= f.submit "Change Password", class: 'button-fixed submit-button'%>
  </div>
  <div class="field">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
