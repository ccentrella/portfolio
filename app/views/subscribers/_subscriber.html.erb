<%= render partial: "shared/error_messages", object: @subscriber %>
<%= form_with(model: @subscriber, local: true, class: 'contact-form') do |f| %>
    <div class="container form-container">
        <h2>Subscribe</h2>
    </div>
    <%= f.text_field :name, placeholder: 'Name (Optional)', class: 'field' %><br/>
    <%= f.text_field :email_address, placeholder: 'Email Address', class: 'field' %><br/>
    <%= f.text_field :nickname, hint: 'Leave this field blank!', class: 'hidden' %>     
    <% if @show_checkbox_recaptcha %>
        <%= recaptcha_tags %>
    <% else %>
        <%= recaptcha_v3(action: 'subscribe', site_key: ENV['RECAPTCHA_SITE_KEY']) %>
    <% end %>     
    <%= f.submit 'Submit', class: 'button-fixed submit-button' %>
<% end %>