<% provide(:title, "Get in Touch") %>
<%= render partial: "shared/error_messages", object: @email_contact %>
<div class="container">
  <h1>Get in Touch</h1>
  <p class="large">Thank you so much for reaching out to me! I will do my best to respond as soon as possible, and I look forward to getting back to you!</p>
  <p class="large">“The Lord, He is my strength and my song, and He has become my salvation. He is my God.”
    (Exodus 15:2)</p>
</div>
<%= form_with(model: @email_contact, local: true, class: 'contact-form') do |f| %>
    <%= f.text_field :name, placeholder: 'Name', class: 'field' %>
    <br/>
    <%= f.email_field :email, placeholder: 'Email', class: 'field' %>
    <br/>
    <%= f.text_area :message, placeholder: 'Message', class: 'field field-message' %>
    <br/>
    <% if @show_checkbox_recaptcha %>
        <%= recaptcha_tags %>
    <% else %>
        <%= recaptcha_v3(action: 'contact', site_key: ENV['RECAPTCHA_SITE_KEY_V3']) %>
    <% end %>    
    <%= f.text_field :nickname, hint: 'Leave this field blank!', class: 'hidden' %>
    <%= f.submit 'Send Message', class: 'field submit-button' %>
<% end %>